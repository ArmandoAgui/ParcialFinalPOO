<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.parcialfinalpoo.ClienteController">
    <children>
        <GridPane fx:id="gridPane" hgap="10.0" layoutX="10.0" layoutY="10.0" prefHeight="360.0" prefWidth="580.0" vgap="10.0">

            <HBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <Button fx:id="btnAgregar" text="Agregar"  />
                <Button fx:id="btnActualizar" text="Actualizar" disable="true"  />
                <Button fx:id="btnEliminar" text="Eliminar" disable="true"  />
                <Button fx:id="btnLimpiar" text="Limpiar"  />
            </HBox>

            <TableView fx:id="tblClientes" prefHeight="200.0" prefWidth="580.0" GridPane.columnIndex="0" GridPane.rowIndex="4">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                    <TableColumn fx:id="colNombreCompleto" prefWidth="150.0" text="Nombre Completo" />
                    <TableColumn fx:id="colDireccion" prefWidth="150.0" text="Dirección" />
                    <TableColumn fx:id="colTelefono" prefWidth="150.0" text="Teléfono" />
                </columns>
            </TableView>
         <HBox alignment="CENTER_LEFT" prefHeight="33.0" prefWidth="500.0" GridPane.rowIndex="2">
            <children>
               <Label text="Telefono" />
                  <TextField fx:id="txtTelefono" prefHeight="26.0" prefWidth="388.0">
                  <HBox.margin>
                     <Insets left="58.0" />
                  </HBox.margin>
               </TextField>
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label text="Nombre Completo" />
                  <TextField fx:id="txtNombreCompleto" prefHeight="26.0" prefWidth="385.0">
                  <HBox.margin>
                     <Insets left="5.0" />
                  </HBox.margin>
               </TextField>
            </children>
         </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
            <children>
               <Label text="Direccion" />
                  <TextField fx:id="txtDireccion" prefHeight="26.0" prefWidth="385.0">
                  <HBox.margin>
                     <Insets left="55.0" />
                  </HBox.margin>
               </TextField>
            </children>
         </HBox>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</AnchorPane>
